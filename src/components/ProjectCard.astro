---
import LinkIcon from "./icons/LinkIcon.astro";

const { title, tags = [], url, gradient, ...props } = Astro.props;
---

<a
  href={url}
  {...props}
  class={`rounded-md w-72 min-w-72 h-96 p-[1.1px] ${gradient} no-underline md:hover:-translate-y-2 transition ease-in-out duration-300`}
>
  <div
    class="bg-primary-light dark:bg-primary-dark rounded-md w-full h-full p-4"
  >
    <div class="w-full h-full flex flex-col justify-between">
      <div class="flex justify-between items-center">
        <p class="text-xl">
          {title}
        </p>
        <LinkIcon />
      </div>

      <div class="my-4">
        <slot />
      </div>

      <div
        class="dark:text-gray-300 text-gray-600 text-sm flex justify-start space-x-3 mt-auto"
      >
        {tags.map((tag: string) => <p>{tag}</p>)}
      </div>
    </div>
  </div>
</a>
