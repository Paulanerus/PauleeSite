---
import LinkIcon from "./icons/LinkIcon.astro";

interface Props {
    title: string;
    tags?: string[];
    url: string;
    target?: string;
}

const { title, tags = [], url, target = "" } = Astro.props;
---

<a
    href={url}
    target={target}
    class="group block rounded-lg border border-zinc-200 dark:border-zinc-800 bg-primary-light dark:bg-primary-dark p-6 no-underline transition-all duration-300 hover:border-zinc-400 dark:hover:border-zinc-600 hover:-translate-y-1 shadow-sm hover:shadow-md"
>
    <div class="flex flex-col h-full">
        <div class="flex justify-between items-start mb-4">
            <h3 class="text-xl font-medium">
                {title}
            </h3>
            <LinkIcon
                class="w-5 h-5 opacity-50 group-hover:opacity-100 transition-opacity"
            />
        </div>

        <div
            class="flex-grow mb-4 text-zinc-600 dark:text-zinc-400 leading-relaxed"
        >
            <slot />
        </div>

        <div class="flex flex-wrap gap-2 mt-auto">
            {
                tags.map((tag: string) => (
                    <span class="text-xs px-2 py-1 rounded-full bg-zinc-100 dark:bg-zinc-900 text-zinc-600 dark:text-zinc-400 border border-zinc-200 dark:border-zinc-800">
                        {tag}
                    </span>
                ))
            }
        </div>
    </div>
</a>
