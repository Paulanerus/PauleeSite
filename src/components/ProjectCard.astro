---
const { title, tags = [], github } = Astro.props;
---

<a
  href={github}
  target="_blank"
  class="rounded-md w-72 min-w-72 h-96 p-4 group border-2 border-primary-dark dark:border-zinc-800 no-underline hover:no-underline md:hover:scale-105 transition ease-in-out duration-300"
>
  <div class="w-full h-full flex flex-col justify-between">
    <p class="text-xl">
      {title}
    </p>

    <div class="my-4">
      <slot />
    </div>

    <div
      class="dark:text-gray-300 text-gray-600 text-sm flex justify-start space-x-3 mt-auto"
    >
      {tags.map((tag: string) => <p>{tag}</p>)}
    </div>
  </div>
</a>
