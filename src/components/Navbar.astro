---
import ThemeToggle from "./ThemeToggle.astro";
---

<div
  class="fixed left-0 top-0 backdrop-blur-md z-10 h-16 w-full flex items-center justify-between"
>
  <p class="text-3xl pl-4">Paul.</p>

  <div
    class="absolute left-1/2 transform -translate-x-1/2 flex justify-center space-x-6 text-lg w-auto"
  >
    <a href="https://github.com/Paulanerus" class="relative" target="_blank"
      >GitHub</a
    >
    <a href="#" class="relative">Placeholder</a>
    <a class="relative">Mail</a>
  </div>

  <div class="pr-4 z-11">
    <ThemeToggle />
  </div>
</div>

<style scoped>
  a::before {
    content: "";
    position: absolute;
    display: block;
    width: 100%;
    height: 1px;
    bottom: 0;
    left: 0;
    background-color: #1a1b1f;
    transform: scaleX(0);
    transition: transform 0.18s ease;
  }

  a:hover::before {
    transform: scaleX(1);
  }
</style>
