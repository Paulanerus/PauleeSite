---
import ThemeToggle from "./ThemeToggle.astro";
---

<nav
  transition:animate="none"
  transition:persist
  class="fixed left-0 top-0 backdrop-blur-lg z-10 h-14 md:h-16 w-full flex items-center justify-between"
>
  <a href="/" class="text-2xl md:text-3xl pl-4">Paul.</a>

  <div
    class="absolute left-1/2 transform -translate-x-1/2 flex justify-center space-x-6 text-lg w-auto"
  >
    <a
      href="https://github.com/Paulanerus"
      class="relative link text-base md:text-lg dark:before:bg-primary-light before:bg-primary-dark"
      target="_blank">GitHub</a
    >
    <a class="relative link text-base md:text-lg dark:before:bg-primary-light before:bg-primary-dark">Mail</a>
  </div>

  <div class="pr-4 z-20">
    <ThemeToggle />
  </div>
</nav>

<style scoped>
  .link::before {
    content: "";
    position: absolute;
    display: block;
    width: 100%;
    height: 1px;
    bottom: 0;
    left: 0;
    transform: scaleX(0);
    transition: transform 0.18s ease;
  }

  .link:hover::before {
    transform: scaleX(1);
  }
</style>
