---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";

import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="author" content="Paul" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" />
    <link
      rel="preload"
      href="/fonts/Geist-Light.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <ClientRouter />
  </head>
  <body
    class="font-sans dark:bg-primary-dark bg-primary-light dark:text-primary-light text-primary-dark antialiased"
  >
    <Navbar />
    <main class="md:mt-36 mt-18 mb-6 flex flex-col gap-16">
      <slot />
    </main>
  </body>
</html>
